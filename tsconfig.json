{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "cli.ts",
    "cli-storage.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
